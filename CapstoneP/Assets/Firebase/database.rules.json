{
  "rules": {
    "users": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('profile').child('role').val() === 'admin'",
      ".write": "auth != null && root.child('users').child(auth.uid).child('profile').child('role').val() === 'admin'",
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('profile').child('role').val() === 'admin')",
        ".write": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('profile').child('role').val() === 'admin')",
        "progress": {
          "$subject": {
            ".validate": "newData.hasChildren(['lessonCompleted','score'])",
            "lessonCompleted": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            },
            "score": {
              ".validate": "newData.isNumber() && newData.val() >= 0"
            }
          }
        }
      }
    },

    "catalog": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('profile').child('role').val() === 'admin'"
    },

    "summaries": {
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || root.child('users').child(auth.uid).child('profile').child('role').val() === 'admin')",
        ".write": "auth != null && root.child('users').child(auth.uid).child('profile').child('role').val() === 'admin'"
      }
    },

    ".read": false,
    ".write": false
  }
}
